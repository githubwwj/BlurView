<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/white" />

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/statusBarView"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?selectableItemBackground"
            android:paddingHorizontal="11dp"
            android:src="@drawable/back_1" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="模糊图层测试界面"
            android:textColor="@color/common_txt_level_1"
            android:textSize="16sp" />

    </RelativeLayout>

    <com.appxy.blurview.BlurTarget
        android:id="@+id/blurTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rl"
        android:layout_margin="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_rl"
            android:scaleType="centerCrop"
            android:src="@drawable/add_date_phone" />

    </com.appxy.blurview.BlurTarget>

    <com.appxy.blurview.BlurOverlayView
        android:id="@+id/blurOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/blurTarget"
        android:layout_alignTop="@id/blurTarget"
        android:layout_alignEnd="@id/blurTarget"
        android:layout_alignBottom="@id/blurTarget" />

</RelativeLayout>